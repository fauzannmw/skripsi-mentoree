datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model Mentor {
  nim          String  @id @unique
  name         String
  major        String
  phone_number String
  image        String
  course       String
  course_day   String?
  // course_day   Day[]
}

